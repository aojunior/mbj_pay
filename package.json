{
  "name": "mbj-pay",
  "version": "0.1.9",
  "description": "An application for instant payment",
  "main": "./out/main/index.js",
  "author": "mbjinformatica",
  "repository": {
    "type": "git",
    "url": "https://github.com/aojunior/mbj_pay"
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "preelectron-pack": "npm run-script build",
    "prisma:generate": "prisma generate",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:renderer": "electron-vite build",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:release": " set GH_TOKEN= && npm run build && electron-builder --win -p onTagOrDraft",
    "build:win": "npm run prisma:generate && npx prisma migrate deploy && npm run build && electron-builder --win",
    "build:prisma": "npm run prisma:generate && electron-vite build",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux",
    "package-windows": "rm -rf build && rm -rf dist && npm run build && electron-builder -w -c.extraMetadata.main=build/electron.js"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "@hookform/resolvers": "^3.4.0",
    "@prisma/client": "3.15.2",
    "@react-icons/all-files": "^4.1.0",
    "auto-launch": "^5.0.6",
    "axios": "^1.6.8",
    "combined-stream": "^1.0.8",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.4.5",
    "electron-updater": "4.0.0",
    "form-data": "^4.0.1",
    "fs-extra": "^11.2.0",
    "graceful-fs": "^4.2.11",
    "https": "^1.0.0",
    "jsonfile": "^6.1.0",
    "lodash": "^4.17.21",
    "node-machine-id": "^1.1.12",
    "react-hook-form": "^7.51.4",
    "react-icons": "^5.2.1",
    "react-router-dom": "^6.23.1",
    "react-select": "^5.8.1",
    "styled-components": "^6.1.11",
    "universalify": "^2.0.1",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^1.0.1",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@testing-library/react": "^15.0.7",
    "@types/node": "^18.19.9",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/styled-components": "^5.1.34",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^22.3.27",
    "electron-builder": "^22.9.1",
    "electron-vite": "^2.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "prisma": "3.15.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  }
}
