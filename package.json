{
  "name": "mbj-pay",
  "version": "1.0.0",
  "description": "An application for instant payment",
  "main": "./out/main/index.js",
  "author": "mbjinformatica",
  "scripts": {
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "preelectron-pack": "npm run-script build",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux",
    "preinstall": "npm install better-sqlite3@^10.0.0 --no-save --build-from-source --sqlite3=\"$(pwd)/sqlite-amalgamation\"",
    "package-windows": "rm -rf build && rm -rf dist && npm run build && electron-builder -w -c.extraMetadata.main=build/electron.js"
  },
  "build": {
    "appId": "mbjpay.matera.app",
    "productName": "MBJ-Pay",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "dist/**/*",
      "out/**/*",
      "resources/**/*"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "extraResources": [
      "./database.db"
    ],
    "extends": null
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "@hookform/resolvers": "^3.4.0",
    "@react-icons/all-files": "^4.1.0",
    "auto-launch": "^5.0.6",
    "axios": "^1.6.8",
    "better-sqlite3": "^10.0.0",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.4.5",
    "electron-router-dom": "^1.0.5",
    "fs-extra": "^11.2.0",
    "https": "^1.0.0",
    "lodash": "^4.17.21",
    "react-hook-form": "^7.51.4",
    "react-icons": "^5.2.1",
    "react-router-dom": "^6.23.1",
    "styled-components": "^6.1.11",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^1.0.1",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/rebuild": "^3.6.0",
    "@testing-library/react": "^15.0.7",
    "@types/node": "^18.19.9",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/styled-components": "^5.1.34",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  }
}
